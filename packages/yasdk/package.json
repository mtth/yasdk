{
  "name": "yasdk",
  "version": "0.1.6",
  "repository": "github:mtth/yasdk",
  "description": "Yet another TypesScript SDK generator",
  "keywords": [
    "yasdk"
  ],
  "author": "Matthieu Monsch <mtth@apache.org>",
  "license": "MIT",
  "type": "module",
  "files": [
    "bin/",
    "lib/",
    "resources/"
  ],
  "bin": "bin/yasdk.js",
  "exports": {},
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out $(find test -name '*.gen' -o -name '*.gen.*')",
    "fix": "prettier --write",
    "gen-test-pets": "./bin/yasdk.js -i test/resources/pets.openapi.yaml -o test/pets-sdk.gen.ts",
    "gen-test-tables": "./bin/yasdk.js -i test/resources/tables.openapi.yaml -o test/tables-sdk.gen.ts",
    "gen-test": "([ -e test/pets-sdk.gen.ts ] || pnpm run gen-test-pets) && ([ -e test/tables-sdk.gen.ts ] || pnpm run gen-test-tables)",
    "prepare": "pnpm run build",
    "test": "pnpm run gen-test && vitest",
    "watch": "tsc -b -w src test"
  },
  "dependencies": {
    "@opvious/stl-errors": "^0.15.8",
    "commander": "^10.0.0",
    "openapi-typescript": "^6.1.0",
    "yasdk-openapi": "workspace:*"
  },
  "devDependencies": {
    "@koa/router": "^10.1.1",
    "@types/koa": "^2.13.1",
    "@types/koa__router": "^8.0.11",
    "@types/node-fetch": "^2.6.2",
    "koa": "^2.13.1",
    "koa-body": "^6.0.1",
    "node-fetch": "^2.6.7"
  },
  "jest": {
    "coverageDirectory": "../../out/coverage/yasdk",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      ".d.ts",
      ".js"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "babelConfig": {
            "compact": false
          },
          "tsconfig": "test/tsconfig.json"
        }
      ]
    }
  },
  "typedocMain": "src/index.ts"
}
