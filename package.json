{
  "name": "@opvious/yasdk-packages",
  "version": "0.1.0",
  "private": true,
  "repository": "github:opvious/stl.ts",
  "author": "Matthieu Monsch <mtth@apache.org>",
  "license": "MIT",
  "scripts": {
    "clean": "pnpm -r -F !. run clean && rm -rf node_modules out",
    "fix": "prettier --write 'packages/*/{src,test}/**/*.{ts,tsx}' && pnpm run lint --fix",
    "lint": "eslint 'packages/*/{src,test}/**/*.{ts,tsx}'",
    "test": "pnpm -r run test --coverage"
  },
  "devDependencies": {
    "@opvious/eslint-plugin": "^0.1.20",
    "@opvious/prettier-typescript": "^0.1.20",
    "@opvious/tsconfig": "^0.1.20",
    "@types/jest": "^29.2.2",
    "@types/node": "^18.8.5",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "jest": "^29.3.1",
    "jest-extended": "^3.1.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.6.1",
    "ts-essentials": "^9.3.0",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": "@opvious/prettier-typescript"
}
